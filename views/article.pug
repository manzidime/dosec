extends home
block content
    .row
        .col-sm-12
            .card
                .card-header.bg-primary.py-2
                    h5.text-light Article
                .card-body
                    #container-alert
                    .container-form.d-flex.flex-column
                        a.btn.mb-1.btn-primary.btn-sm.rounded-0.mb-2.align-self-end(data-toggle='collapse' href='#multiCollapseExample1' role='button' aria-expanded='false' aria-controls='multiCollapseExample1')
                            i.feather.icon-plus
                            |  Nouveau taux
                        #multiCollapseExample1.collapse.multi-collapse.mt-2
                            .card.shadow-none
                                .card-body.p-0
                                    form.needs-validation(novalidate='')#form-new-article
                                        #container-error
                                        .row
                                            .col-md-4
                                                .form-group
                                                    label.floating-label(for='type') Type objet
                                                    select#type.form-control.form-control-sm(required='')
                                                        option(value='' selected='' disabled='') Choisir un type
                                                        if types
                                                        each type in types
                                                            option(value=`${type.id_type_objet}`)=type.designation
                                            .col-md-4
                                                .form-group
                                                    label.floating-label(for='designation') Designation
                                                    input.form-control.form-control-sm(type='text' id='designation' required='')
                                            .col-md-4
                                                .form-group
                                                    label.floating-label(for='description') Description
                                                    input.form-control.form-control-sm(type='text' id='description' required='')
                                            .col-md-12
                                                .float-right
                                                    button.btn.btn-success.btn-sm.save-add.rounded-0.mr-2(type='submit') Enregistrer
                    .dt-responsive.table-responsive.container-table(data-type=`${JSON.stringify(types)}`)