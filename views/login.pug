// [ auth-signup ] start
.auth-wrapper(style='background:#dedede !important')
    .auth-content
        .card
            .row.align-items-center.text-center
                .col-md-12
                    .card-body
                        form.needs-validation(novalidate='')#form-login
                            img.img-fluid.mb-4(src='/images/dosec.svg' alt='' width=100)
                            h4.mb-3.f-w-600 Connexion
                            #container-error
                            .input-group.mb-3
                                .input-group-prepend
                                    span.input-group-text
                                        i(data-feather='user')
                                input.form-control(type='text' placeholder="Nom d'utilisateur" required='')#login
                            .input-group.mb-4
                                .input-group-prepend
                                    span.input-group-text
                                        i(data-feather='lock')
                                input.form-control(type='password' placeholder='Mots de passe' required='')#password
                            button.btn.btn-primary.btn-block.mb-4.rounded-0(type='submit') Se connecter
// [ auth-signup ] end
