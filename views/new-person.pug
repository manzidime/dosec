extends home
block content
    .row
        // customar project  start
        .col-xl-12
            .card
                .card-body
                    h5.mt-3.mb-3 Cr√©ation du contribuable
                    form.needs-validation(novalidate='')#form-new-person
                        .container-error
                        .row
                            .col-sm-4
                                .form-group
                                    label.floating-label(for='nom_personne') Nom
                                    input.form-control.rounded-0(type='text' id='nom_personne' required='')
                            .col-sm-4
                                .form-group
                                    label.floating-label(for='telephone') T&eacute;l&eacute;phone
                                    input.form-control.rounded-0(type='text' id='telephone' required='')
                            .col-sm-4
                                .form-group.fill
                                    label.floating-label(for='ville') Ville
                                    input#ville.form-control.rounded-0(type='text' value='Kinshasa' required='' disabled)
                            .col-sm-4
                                .form-group.fill
                                    label.floating-label(for='district') District
                                    select#district.form-control.rounded-0(required='')
                                        if districts
                                        each district in districts
                                            option(value=`${district.id_district}`)=district.libelle_district
                            .col-sm-4
                                .form-group
                                    label.floating-label(for='commune') Commune
                                    select#commune.form-control.rounded-0(required='')
                            .col-sm-4
                                .form-group
                                    label.floating-label(for='quartier') Quartier
                                    select#quartier.form-control.rounded-0(required='')
                            .col-sm-4
                                .form-group
                                    label.floating-label(for='avenue') Avenue
                                    input#avenue.form-control.rounded-0(type='text' required='')
                            .col-sm-4
                                .form-group
                                    label.floating-label(for='numero') Num&eacute;ro
                                    input.form-control.rounded-0(type='text' id='numero' required='')
                            .col-sm-4
                                .form-group
                                    label.floating-label(for='observation') Observation
                                    input.form-control.rounded-0(type='text' id='observation' required='')
                            .col-sm-12.text-right
                                button.btn.btn-success.rounded-0.btn-sm.mr-2(type='Submit') Enregistrer
                                button.btn.btn-danger.rounded-0.btn-sm(type='Reset') Reprendre
        // customar project  end