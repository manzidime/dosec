extends home
block content
    .row
        .col-xl-12
            .card
                .card-body
                    h5.mt-3.mb-3 Création du service
                    form.needs-validation(novalidate='')#form-new-service
                        #container-error
                        .row
                            .col-sm-4
                                .form-group
                                    label.floating-label(for='designation') Service
                                    input#designation.form-control.form-control-sm.rounded-0(type='text' required='')
                            .col-sm-4
                                .form-group.fill
                                    label.floating-label(for='ministere') Ministère
                                    input#ministere.form-control.form-control-sm(type='text' required='')
                            .col-sm-4
                                .form-group
                                    label.floating-label(for='description') Description
                                    input.form-control.form-control-sm(type='text' id='description' required='')
                            .col-sm-12
                                .float-right
                                    button.btn.btn-success.btn-sm.save-add.rounded-0.mr-2(type='submit') Enregistrer
                                    button.btn.btn-danger.btn-sm.rounded-0(type='Reset') Annuler
        .col-sm-12
            .card
                .card-header
                    h5 Liste globale des services
                .card-body
                    .row
                        .col-sm-2
                            .form-group.fill
                                label.floating-label(for='search') Recherche
                                input#search.form-control.form-control-sm(type='text' required='')
                    .dt-responsive.table-responsive
                        table.table.table-striped.table-bordered.nowrap
                            thead
                                tr
                                    th Service
                                    th Minitsère
                                    th description
                                    th Action
                            tbody.content-table

                            tfoot
                                tr
                                    th Service
                                    th Ministère
                                    th description
                                    th Action
                        div( id='pagination').text-right