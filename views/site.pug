extends home
block content
    .row
        .col-xl-12
            .card
                .card-header.bg-primary.py-2
                    h5.text-light Sites
                .card-body
                    #container-alert
                    .container-form.d-flex.flex-column
                        a.btn.mb-1.btn-primary.btn-sm.rounded-0.mb-2.align-self-end(data-toggle='collapse' href='#multiCollapseExample1' role='button' aria-expanded='false' aria-controls='multiCollapseExample1')
                            i.feather.icon-plus
                            |  Nouveau site
                        #multiCollapseExample1.collapse.multi-collapse.mt-2
                            .card.shadow-none
                                .card-body.p-0
                                    form.needs-validation(novalidate='')#form-new-site
                                        #container-error
                                        .row
                                            .col-md-3
                                                .form-group
                                                    label.floating-label(for='province') Province
                                                    input#province.form-control.form-control-sm.rounded-0(type='text' disabled='' required='' value="KINSHASA")
                                            .col-md-3
                                                .form-group
                                                    label.floating-label(for='commune-site') Commune
                                                    span.text-danger *
                                                    select#commune-site.form-control.form-control-sm(required='')
                                                        option(value='' selected='' disabled='') Choisir une commune
                                                        if communes
                                                        each commune in communes
                                                            option(value=`${commune.id_commune}`)=commune.libelle_commune
                                            .col-md-3
                                                .form-group.fill
                                                    label.floating-label(for='lieu') Lieu
                                                    span.text-danger *
                                                    input#lieu.form-control.form-control-sm(type='text' required='')
                                            .col-sm-3
                                                .form-group
                                                    label.floating-label(for='code') Code
                                                    span.text-danger *
                                                    input.form-control.form-control-sm(type='text' id='code' required='')
                                            .col-sm-12
                                                .form-group
                                                    label.floating-label(for='operation') Opérations
                                                    span.text-danger *
                                                    select#operation.form-control.form-control-sm(required='')
                                                        option(value='' selected='' disabled='') Choisir une opération
                                                            if taxes
                                                            each taxe in taxes
                                                                option(value=`${taxe.id_taxe}`)=taxe.designation
                                            .col-sm-12
                                                .float-right
                                                    button.btn.btn-success.btn-sm.save-add.rounded-0.mr-2(type='submit') Enregistrer
                    .dt-responsive.table-responsive.container-table(data-commune=`${JSON.stringify(communes)}`)